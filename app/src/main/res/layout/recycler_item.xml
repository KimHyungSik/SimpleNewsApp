<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/recyler_card_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/recycler_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/recycler_title_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="제목"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/recycler_image_view"
            />
        <TextView
            android:id="@+id/recycler_author_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="작성자"
            app:layout_constraintTop_toBottomOf="@+id/recycler_title_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/recycler_publishedAt_text"
            />
        <TextView
            android:id="@+id/recycler_publishedAt_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="작성일"
            app:layout_constraintTop_toBottomOf="@+id/recycler_title_text"
            app:layout_constraintRight_toLeftOf="@+id/recycler_author_text"
            app:layout_constraintLeft_toRightOf="@+id/recycler_image_view"
            />
        <TextView
            android:id="@+id/recycler_description_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="내용"
            app:layout_constraintTop_toBottomOf="@+id/recycler_publishedAt_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/recycler_image_view"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>